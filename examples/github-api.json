{
  "openapi": "3.0.0",
  "info": {
    "title": "GitHub MCP API",
    "version": "1.0.0",
    "description": "API for testing GitHub MCP server"
  },
  "paths": {
    "/repos/{owner}/{repo}": {
      "get": {
        "summary": "Get repository information",
        "description": "Get detailed information about a GitHub repository",
        "parameters": [
          {
            "name": "owner",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "repo",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    },
                    "stars": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Repository not found"
          }
        }
      }
    },
    "/repos/{owner}/{repo}/issues": {
      "get": {
        "summary": "List repository issues",
        "description": "Get a list of issues for a repository",
        "parameters": [
          {
            "name": "owner",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "repo",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "number": {
                        "type": "number"
                      },
                      "title": {
                        "type": "string"
                      },
                      "state": {
                        "type": "string",
                        "enum": ["open", "closed"]
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
} 